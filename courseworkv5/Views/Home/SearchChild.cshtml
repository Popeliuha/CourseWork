@model courseworkv5.Models.Home.SearchChildViewModel

<h2>Працівники у яких кількість дітей більше @Model.RequestedCount</h2>


<h4>Працівники:</h4>
<div align="center">
    <table class="table table-striped">
        <tr>
            <th>WorkerId</th>
            <th>WorkerName</th>
            <th>Department</th>
            <th>Gender</th>
            <th>Age</th>
            <th>ChildrenCount</th>
            <th>Experience</th>
        </tr>
        <tbody>
            @foreach (var w in Model.Workers)
            {
                <tr>
                    <td>@w.WorkerId</td>
                    <td>@w.WorkerName</td>
                    <td>@w.DepartmentId</td>
                    <td>@w.Sex</td>
                    <td>@w.Age</td>
                    <td>@w.ChildrenCount</td>
                    <td>@w.Experience</td>
                </tr>
            }
        </tbody>
    </table>
</div>