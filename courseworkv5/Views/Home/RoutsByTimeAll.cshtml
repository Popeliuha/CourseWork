
@{
    ViewBag.Title = "Request 16";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<courseworkv5.Routs>

<body>
    <div align="center">
        <table class="table table-striped">
            <tr>
                <th>Route Id</th>
                <th>Route Name</th>
                <th>Route Time</th>
                <th>Category</th>
            </tr>
            <tbody>
                <form method="post" action="RoutsByTime">
                    <h4>Вивести маршрути за тривалістю, більше :</h4>
                    <select name="routTime">
                        <option value="1">1 години</option>
                        <option value="2">2 годин</option>
                        <option value="3">3 годин</option>
                        <option value="4">4 годин</option>
                        <option value="5">5 годин</option>
                        <option value="10">10 годин</option>
                    </select>
                    <input type="submit" value="Send" />
                </form>
                @{
                    foreach (var t in Model)
                    {
                        <tr>
                            <td>@t.RouteId</td>
                            <td>@t.RouteName</td>
                            <td>@t.RouteTime</td>
                            <td>@t.Category</td>
                        </tr>
                    }
                }


            </tbody>
        </table>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js"></script>
    <script src="script.js"></script>

</body>

