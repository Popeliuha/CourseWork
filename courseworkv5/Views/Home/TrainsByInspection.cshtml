@model IEnumerable<courseworkv5.Trains>

@{
    ViewBag.Title = "Request 8";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h2>Вивести інформацію про потяги за їх інспекцією.</h2>


    <h4>Потяги:</h4>
    <table class="table table-striped">
        <tr>
            <th>TrainId</th>
            <th>TrainNumber</th>
            <th>TrainType</th>
            <th>TrainAge</th>
            <th>Inspection</th>
        </tr>
        <tbody>
            @{
                foreach (var t in Model)
                {
                    <tr>
                        <td>@t.TrainId</td>
                        <td>@t.TrainNumber</td>
                        <td>@t.TrainType</td>
                        <td>@t.TrainAge</td>
                        <td>@t.Inspection.First(c => c.TrainId == t.TrainId).Inspection1</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>